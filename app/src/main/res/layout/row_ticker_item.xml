<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlTicker">

    <TextView
        android:id="@+id/tvBaseAsset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Bit Coin"
        android:layout_marginStart="4dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Bit Coin"
        android:layout_marginStart="4dp"
        android:layout_alignBottom="@id/tvBaseAsset"
        android:layout_toEndOf="@id/tvBaseAsset"/>

    <TextView
        android:id="@+id/tvSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:text="Bit Coin"
        android:layout_marginStart="4dp"
        android:layout_below="@id/tvQuote"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_below="@id/tvSymbol"/>

</RelativeLayout>